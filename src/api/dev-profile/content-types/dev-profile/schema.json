{
  "kind": "singleType",
  "collectionName": "dev_profiles",
  "info": {
    "singularName": "dev-profile",
    "pluralName": "dev-profiles",
    "displayName": "dev-profile",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "devName": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 5,
      "default": "Rodrigo Cabrera"
    },
    "jobPosition": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "minLength": 5,
      "default": "FrontEnd Web Developer"
    },
    "profileDescription": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "text",
      "required": true,
      "minLength": 5,
      "unique": true,
      "default": "Soy un desarrollador de software con experiencia en el desarrollo de aplicaciones web y móviles. Actualmente me estoy especializando en tecnologías de front-end."
    },
    "location": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "default": "Argentina",
      "unique": true,
      "minLength": 3
    },
    "aboutMe": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "blocks",
      "required": true
    },
    "curriculum_vitae": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files",
        "videos",
        "audios",
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
